{# Mandatory variable `tile { url: string, title: string, description: string, imagePath: string, imageAlt: string }` to make it work #}
<div class="fr-tile fr-enlarge-link">
    <div class="fr-tile__body">
        {% set tileUrl = tile.url | locale_url(lang) or tile.externalUrl %}
        {% set urlDescription %}{{ tile.title }}{% if tile.externalUrl %} - {{ "new_window" | i18n }}{% endif %}{% endset %}
        <h4 class="fr-tile__title">
            <a class="fr-tile__link" href="{{ tileUrl }}" title="{{ urlDescription }}">
                {{ tile.title }}
            </a>
        </h4>
        <p class="fr-tile__desc">{{ tile.description }}</p>
    </div>
    {% if tile.imagePath %}
        <div class="fr-tile__img">
            <img src="{{ tile.imagePath }}" class="fr-responsive-img" data-fr-js-ratio="true">
        </div>
    {% endif %}
</div>
